<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background color of the EditText -->
    <solid android:color="#FFFFFF"/> <!-- Change the color to your desired background -->

    <!-- Define the border properties -->
    <stroke
        android:width="2dp"
        android:color="#000000"/> <!-- Change the color to your desired border color -->

    <!-- Define the corner radius for rounded edges -->
    <corners android:radius="10dp"/> <!-- Adjust the radius to control the roundness -->

    <!-- Optional: Add padding inside the EditText -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
